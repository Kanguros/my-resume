{{#if resume.skills.length}}
  <section id="skills">
    <h3>Skills</h3>
    <div class="grid-list">
      {{#each resume.skills}}
        <div class="tag">
          {{#name}}
            <h4>{{.}}</h4>
            <span>
            </span>
          {{/name}}
          {{#if keywords.length}}
            <ul class="tag-list">
              {{#keywords}}
                <li>{{.}}</li>
              {{/keywords}}
            </ul>
          {{/if}}
        </div>
      {{/each}}
    </div>
  </section>
{{/if}}
